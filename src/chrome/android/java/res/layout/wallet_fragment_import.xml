<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="#1E1E1E">

    <TextView
        android:id="@+id/wallet_tab_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"
        android:text="Your seed phrase"
        tools:ignore="HardcodedText" />

    <FrameLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:text="SEED PHRASE"
            android:textSize="18sp"
            android:layout_gravity="center"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal|end"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 words"
        android:textColor="#808080"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/create_wallet_seed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <Space android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Your private key"
        android:textAllCaps="true"
        android:gravity="center"
        android:textSize="15sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Private key..."
        android:textColorHint="@android:color/white"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_background_wallet_black"
        android:padding="10dp"
        android:layout_marginVertical="20dp"
        tools:ignore="HardcodedText" /> -->

    <Button
        android:id="@+id/button_continue"
        android:background="@drawable/rounded_background_wallet_send_button"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:layout_width="match_parent"
        android:text="CONTINUE"
        android:layout_height="50dp"
        tools:ignore="HardcodedText"/>

</LinearLayout>

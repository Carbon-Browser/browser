import("//ios/build/chrome_build.gni")

source_set("content_notification") {
  sources = [
    "sc_content_notification_fullscreen_promo_coordinator.h",
    "sc_content_notification_fullscreen_promo_coordinator.mm",
  ]
  deps = [
    "//ios/chrome/browser/ui/content_suggestions/set_up_list:content_notification_promo_ui",

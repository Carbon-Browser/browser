<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="15dp"
    android:paddingEnd="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/reward_imageview"
            android:layout_width="125dp"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@null" />

        <!--<TextView
            android:id="@+id/reward_monetary_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:elevation="1dp"
            android:textStyle="italic|bold"
            android:layout_toEndOf="@id/reward_imageview" />-->

        <LinearLayout
            android:id="@+id/reward_redeem_button"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_toEndOf="@+id/reward_imageview">

            <TextView
                android:id="@+id/reward_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/reward_monetary_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"
                android:textColor="#ffffff" />

            <!-- <TextView
                android:id="@+id/reward_points_value"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:textStyle="italic"
                android:layout_height="wrap_content" /> -->

            <!-- <Button
                android:id="@+id/reward_redeem_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:letterSpacing="-0.03"
                android:text="@string/reward_redeem" /> -->
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/pro_help_btn"
            android:src="@drawable/rewards_help_new"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription=""
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:layout_gravity="end"
            style="@style/SplitToolbarButtonHelpPro"/>
    </RelativeLayout>

    <!-- <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="#a4a4a4" /> -->
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/universal_ad_container"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_toStartOf="@+id/ntp_universal_ad_item_image"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ntp_universal_ad_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:layout_alignParentStart="true"
                android:maxLines="3"
                android:textColor="#000000"
                android:layout_toStartOf="@+id/ntp_universal_ad_item_image"
                android:textSize="18sp" />

            <View
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/ntp_universal_ad_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ntp_universal_ad_item_image"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:contentDescription="@null"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginTop="10dp"
      android:background="#a4a4a4"/>

</LinearLayout>
